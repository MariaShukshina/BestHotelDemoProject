<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/nextTouristCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/nextTouristLayout"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_marginBottom="16dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/nextTouristTextView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginBottom="16dp"
                    android:layout_weight="2"
                    android:fontFamily="@font/sfprodisplaybold"
                    android:text="@string/next_tourist"
                    android:textSize="20sp" />

                <ImageView
                    android:id="@+id/nextTouristArrowDown"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginEnd="12dp"
                    android:background="@color/arrow_background"
                    android:visibility="gone"
                    android:src="@drawable/down_arrow"
                    android:contentDescription="Down arrow" />

                <ImageView
                    android:id="@+id/nextTouristArrowUp"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_weight="0.1"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:layout_marginEnd="12dp"
                    android:background="@color/arrow_background"
                    android:src="@drawable/up_arrow"
                    android:contentDescription="Up arrow" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/nextTouristInfoLayout"
                android:animateLayoutChanges="true"
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@id/nextTouristLayout">

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:hintTextColor="#A9ABB7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etNextName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tourist_name"
                        android:fontFamily="@font/sfprodisplayregular"
                        android:inputType="text"
                        android:background="#F6F6F9"
                        android:textColorHint="#A9ABB7"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:hintTextColor="#A9ABB7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etNextSurname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tourist_surname"
                        android:fontFamily="@font/sfprodisplayregular"
                        android:inputType="text"
                        android:background="#F6F6F9"
                        android:textColorHint="#A9ABB7"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:hintTextColor="#A9ABB7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etNextBirthDay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tourist_birthday"
                        android:fontFamily="@font/sfprodisplayregular"
                        android:inputType="date"
                        android:background="#F6F6F9"
                        android:textColorHint="#A9ABB7"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:hintTextColor="#A9ABB7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etNextPassportNumber"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tourist_passport_number"
                        android:fontFamily="@font/sfprodisplayregular"
                        android:inputType="number"
                        android:background="#F6F6F9"
                        android:textColorHint="#A9ABB7"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp"/>

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginTop="12dp"
                    android:layout_marginStart="12dp"
                    android:layout_marginEnd="12dp"
                    app:boxCornerRadiusBottomEnd="8dp"
                    app:boxCornerRadiusBottomStart="8dp"
                    app:boxCornerRadiusTopEnd="8dp"
                    app:boxCornerRadiusTopStart="8dp"
                    app:hintTextColor="#A9ABB7">

                    <androidx.appcompat.widget.AppCompatEditText
                        android:id="@+id/etNextPassportValidTill"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/tourist_passport_valid_till"
                        android:fontFamily="@font/sfprodisplayregular"
                        android:inputType="date"
                        android:background="#F6F6F9"
                        android:layout_marginBottom="12dp"
                        android:textColorHint="#A9ABB7"
                        android:textCursorDrawable="@null"
                        android:textSize="16sp"/>

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>